    <div class="container py-5 h-100" id="loginArea">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card text"  >
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                <br />
                <div class="form-outline form-white mb-4">
                  <label class="form-label userArea" for="typeEmailX"
                    >Digite o seu usuário *</label
                  >
                  <input
                    type="email"
                    id="typeEmailX"
                    class="form-control form-control-lg"
                    placeholder="Ex: Rafael@gmail.com"
                  />
                </div>

                <div class="form-outline form-white mb-4">
                  <div class="passwordArea">
                    <label class="form-label" for="typePasswordX">Senha </label>
                    <a href="#!" class="text-secondary fw-bold"
                      >Esqueci a senha</a
                    >
                  </div>
                  <input
                    type="password"
                    id="typePasswordX"
                    class="form-control form-control-lg"
                    placeholder="Insira a sua senha"
                  />
                </div>

                <button
                  class="btn btn-outline-primary btn-lg px-5 botaoLogin"
                  type="submit"
                >
                  ENTRAR
                </button>
              </div>

              <div>
                <p class="mb-0 cadastroArea">
                  Não tem cadastro?
                  <a href="/cadastro" class="text-secondary fw-bold"
                    >Cadastre-se aqui</a
                  >
                </p>
              </div>
            </div>
          </div>
